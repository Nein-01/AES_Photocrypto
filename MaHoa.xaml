<Window x:Class="WpfApp1.MaHoa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MaHoa" Height="700" Width="800">
    <Grid Background="LightBlue" Margin="0,0,-20,0">
        <Label Content="CHƯƠNG TRÌNH GIẤU TIN TRONG ẢNH SAI PHÂN VỚI AES" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top"/>
        <Label Content="ẢNH" FontSize="13" FontWeight="Light" FontStyle="Italic" HorizontalAlignment="Left" Margin="201,67,0,0" VerticalAlignment="Top" BorderBrush="#FF707070" Width="42"/>
        <Image x:Name="AnhGoc"   HorizontalAlignment="Left" Height="197" Margin="198,104,0,0" VerticalAlignment="Top" Width="216" OpacityMask="Black"/>
        <Button Content="CHỌN ẢNH!" Background="LightBlue" FontStyle="Italic" HorizontalAlignment="Left" Margin="55,167,0,0" VerticalAlignment="Top" Height="34" Width="86" BorderBrush="#FF707070" RenderTransformOrigin="0.535,0.678" Click="ChonAnh"/>
        <Label Content="THÔNG ĐIỆP" FontSize="13" FontWeight="Bold" HorizontalAlignment="Left" Margin="55,325,0,0" VerticalAlignment="Top" BorderBrush="#FF707070" Width="143"/>
        <TextBox x:Name="ThongDiep" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="198,318,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="364"/>
        <Button Content="MÃ HÓA" Background="LightBlue" FontWeight="Bold" HorizontalAlignment="Left" Margin="55,426,0,0" VerticalAlignment="Top" Height="34" Width="131" Click="btMaHoa" />
        <TextBox IsReadOnly="True" x:Name="ThongDiepMaHoa" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="198,424,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="364"/>
        <Button Content="GIẤU TIN ẢNH" Background="LightBlue" FontWeight="Bold" HorizontalAlignment="Left" Margin="198,489,0,0" VerticalAlignment="Top" Height="34" Width="131" Click="GiauTin" />
        <Label x:Name="Loi" Content="" Foreground="Red" FontStyle="Italic" FontSize="13" FontWeight="Bold" HorizontalAlignment="Left" Margin="24,587,0,0" VerticalAlignment="Top" Width="354" Height="76"/>
        <Button Content="LẤY THÔNG ĐIỆP TỪ ẢNH" Background="LightBlue" FontWeight="Bold" HorizontalAlignment="Left" Margin="594,318,0,0" VerticalAlignment="Top" Height="34" Width="176" Click="LayThongDiep"  />
        <Button Content="GIẢI MÃ" HorizontalAlignment="Left" VerticalAlignment="Top" Background="LightBlue" Width="131" Height="36" BorderBrush="#FF707070" FontWeight="Bold" Click="btGiaiMa" Margin="55,543,0,0"/>
        <TextBox x:Name="ThongDiepSauGiaiMa" IsReadOnly="True"  VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="198,543,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="364"/>
        <Button Content="LÀM MỚI" HorizontalAlignment="Left" VerticalAlignment="Top" Background="LightBlue" Width="132" Height="36" BorderBrush="#FF707070" FontWeight="Bold" Margin="314,602,0,0" Click="LamMoi"/>
        <TextBox x:Name="Khoa" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="37" Margin="198,370,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="364"/>
        <Label Content="MẬT KHẨU" FontSize="13" FontWeight="Bold" HorizontalAlignment="Left" Margin="55,375,0,0" VerticalAlignment="Top" Width="143"/>
        <Button Content="LẤY THÔNG ĐIỆP TỪ FILE.TXT" Background="LightBlue" FontWeight="Bold" HorizontalAlignment="Left" Margin="594,370,0,0" VerticalAlignment="Top" Height="34" Width="176" Click="btLayTxt"/>
        <Button Content="LƯU MÃ HÓA VÀO .TXT" Background="LightBlue" FontWeight="Bold" HorizontalAlignment="Left" Margin="350,489,0,0" VerticalAlignment="Top" Height="34" Width="148" Click="btCatTxt"  />
        <Label x:Name="lbAnhGiauTin" Content="ẢNH GIẤU TIN" FontSize="13" FontWeight="Light" FontStyle="Italic" HorizontalAlignment="Left" Margin="475,67,0,0" VerticalAlignment="Top" BorderBrush="#FF707070" Width="100"/>
        <Image x:Name="AnhGiauTin"   HorizontalAlignment="Left" Height="197" Margin="472,104,0,0" VerticalAlignment="Top" Width="216" OpacityMask="Black"/>
    </Grid>
</Window>
